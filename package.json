{
  "name": "stt-app",
  "version": "1.0.0",
  "description": "A browser-based Speech-to-Text application using the Web Speech API.",
  "main": "src/js/app.js",
  "scripts": {
    "start": "live-server public --port=3000 --open=/",
    "test": "jest",
    "test:watch": "jest --watchAll",
