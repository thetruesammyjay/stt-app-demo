    "lint": "eslint src/js/**/*.js",
    "format": "prettier --write src/**/*.{js,css,html}"
  },
  "dependencies": {
    "core-js": "^3.41.0",
    "howler": "^2.2.3",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.2.5"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ],
